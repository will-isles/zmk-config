# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Configuration files (use spaces)
[*.{conf,yaml,yml}]
indent_style = space
indent_size = 4

# Device tree source files (use tabs, as per Zephyr/ZMK convention)
[*.{dts,dtsi,overlay}]
indent_style = tab
indent_size = 4

# Keymap files (use spaces for consistency with config files)
[*.keymap]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

